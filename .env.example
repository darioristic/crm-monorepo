# CRM Monorepo - Root Environment Variables
# Copy this file to .env for workspace-level configuration

# ==============================================
# Development Database (Docker Compose)
# ==============================================

# PostgreSQL Settings
POSTGRES_DB=crm_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password
POSTGRES_PORT=5432

# Redis Settings
REDIS_PORT=6379

# ==============================================
# Build Configuration
# ==============================================

# Skip telemetry during builds
NEXT_TELEMETRY_DISABLED=1
