# ============================================
# AI System Configuration
# ============================================
# Copy this file to apps/api-server/.env and fill in your API keys

# OpenAI Configuration (REQUIRED for chat)
OPENAI_API_KEY=sk-proj-your-key-here

# Mistral AI Configuration (REQUIRED for document processing)
MISTRAL_API_KEY=your-mistral-key-here

# Google Generative AI (REQUIRED for embeddings)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-key-here

# ============================================
# AI Feature Flags (Optional)
# ============================================

# Enable/disable AI features
AI_ENABLED=true

# Enable/disable specific features
AI_CHAT_ENABLED=true
AI_DOCUMENT_PROCESSING_ENABLED=true
AI_EMBEDDINGS_ENABLED=true

# ============================================
# AI Configuration (Optional)
# ============================================

# Default AI model
AI_DEFAULT_MODEL=gpt-4o-mini

# Max tokens per request
AI_MAX_TOKENS=4000

# Response timeout (seconds)
AI_TIMEOUT=30

# Rate limiting
AI_RATE_LIMIT_PER_USER=60
AI_RATE_LIMIT_WINDOW=60

# ============================================
# Memory Configuration
# ============================================

# Chat history retention (seconds)
AI_CHAT_HISTORY_TTL=604800  # 7 days

# Working memory retention (seconds)
AI_WORKING_MEMORY_TTL=604800  # 7 days

# Max chat history messages to load
AI_MAX_HISTORY_MESSAGES=20

# ============================================
# Cost Controls
# ============================================

# Daily budget limit (USD)
AI_DAILY_BUDGET_LIMIT=10

# Monthly budget limit (USD)
AI_MONTHLY_BUDGET_LIMIT=100

# Alert threshold (%)
AI_BUDGET_ALERT_THRESHOLD=80

# ============================================
# Model Configuration
# ============================================

# Chat models
AI_CHAT_MODEL=gpt-4o-mini
AI_COMPLEX_MODEL=gpt-4o

# Document processing model
AI_DOCUMENT_MODEL=mistral-small-latest

# Embeddings model
AI_EMBEDDING_MODEL=text-embedding-004

# Temperature settings
AI_TRIAGE_TEMPERATURE=0.1
AI_AGENT_TEMPERATURE=0.3
AI_CREATIVE_TEMPERATURE=0.7

