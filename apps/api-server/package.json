{
  "name": "@crm/api-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit introspect",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts seed",
    "db:unseed": "bun run src/db/seed.ts unseed",
    "db:setup": "bun run db:push && bun run db:seed"
  },
  "dependencies": {
    "@crm/types": "workspace:*",
    "@crm/utils": "workspace:*",
    "bullmq": "^5.30.0",
    "drizzle-orm": "0.44.7",
    "ioredis": "^5.4.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "drizzle-kit": "0.31.7",
    "typescript": "^5.7.0"
  }
}
