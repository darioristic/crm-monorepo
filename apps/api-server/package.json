{
  "name": "@crm/api-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit introspect",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts seed",
    "db:unseed": "bun run src/db/seed.ts unseed",
    "db:seed-companies": "bun run src/db/seed-companies.ts",
    "db:seed-customers": "bun run src/db/seed-customer-data.ts",
    "db:seed-tenants": "bun run src/db/seed-tenant-data.ts",
    "db:add-admin-to-all-companies": "bun run src/db/add-admin-to-all-companies.ts",
    "db:reset": "bun run src/db/reset-data.ts",
    "db:setup": "bun run db:push && bun run db:seed",
    "migrate": "bun run src/db/migrations/index.ts",
    "migrate:up": "bun run src/db/migrations/index.ts up",
    "migrate:down": "bun run src/db/migrations/index.ts rollback",
    "migrate:status": "bun run src/db/migrations/index.ts status"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/mistral": "^1.0.0",
    "@ai-sdk/openai": "^2.0.62",
    "@crm/types": "workspace:*",
    "@crm/utils": "workspace:*",
    "@hono/zod-validator": "0.7.5",
    "@sentry/bun": "10.28.0",
    "ai": "^5.0.87",
    "bcryptjs": "3.0.3",
    "bullmq": "^5.30.0",
    "canvas": "3.2.0",
    "drizzle-orm": "0.44.7",
    "ioredis": "^5.4.1",
    "pdfjs-dist": "5.4.449",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.4",
    "unpdf": "^0.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "drizzle-kit": "0.31.7",
    "typescript": "^5.7.0"
  }
}
