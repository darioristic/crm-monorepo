{
  "name": "@crm/api-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "db:migrate": "bun run src/db/migrations/index.ts migrate",
    "db:rollback": "bun run src/db/migrations/index.ts rollback",
    "db:reset": "bun run src/db/migrations/index.ts reset",
    "db:status": "bun run src/db/migrations/index.ts status",
    "db:schema": "bun run src/db/schema.ts",
    "db:seed": "bun run src/db/seed.ts seed",
    "db:unseed": "bun run src/db/seed.ts unseed",
    "db:setup": "bun run db:schema && bun run db:seed"
  },
  "dependencies": {
    "@crm/types": "workspace:*",
    "@crm/utils": "workspace:*",
    "postgres": "^3.4.4",
    "ioredis": "^5.4.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "bullmq": "^5.30.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.7.0"
  }
}
