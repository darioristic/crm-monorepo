# CRM API Server - Environment Variables
# Copy this file to .env and update values for your environment

# ==============================================
# Required Variables
# ==============================================

# PostgreSQL Database Connection
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://crm_user:crm_password@localhost:5432/crm_db

# Redis Connection
# Format: redis://host:port
REDIS_URL=redis://localhost:6379

# JWT Secret Key (REQUIRED - no default in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================
# Server Configuration
# ==============================================

# API Server Port (default: 3001)
PORT=3001

# API Server Host (default: 0.0.0.0)
HOST=0.0.0.0

# Node Environment
NODE_ENV=development

# ==============================================
# Email Configuration (Optional)
# ==============================================

# SMTP Server Settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com

# ==============================================
# External Integrations (Optional)
# ==============================================

# ERP Integration
ERP_API_URL=
ERP_API_KEY=

# ==============================================
# Rate Limiting Configuration
# ==============================================

# Login rate limit (requests per minute)
RATE_LIMIT_LOGIN=5

# API rate limit (requests per 15 minutes)
RATE_LIMIT_API=100

# Write operations rate limit (requests per minute)
RATE_LIMIT_WRITE=20

# ==============================================
# Logging Configuration
# ==============================================

# Log Level: debug, info, warn, error
LOG_LEVEL=info
