{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@types/bun"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@crm/types": ["../../packages/types/src"],
      "@crm/types/*": ["../../packages/types/src/*"],
      "@crm/utils": ["../../packages/utils/src"],
      "@crm/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
